generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
    OWNER
    ADMIN
    STAFF
  }

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  role      UserRole @default(STAFF)
  approved  Boolean  @default(false)
  businessId String
  business  Business @relation(fields: [businessId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts      Account[]
  sessions      Session[]
  stampingLogs StampingLog[]
}


model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 


model Business {
  id          String      @id @default(uuid())
  name        String    
  address     String?   
  website     String?
  locationPlaceId String?
  locationAddress String?
  locationLat Float?
  locationLng Float?
  subscription Subscription?
  trial Trial?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  loyaltyCardTemplates LoyaltyCardTemplate[]
  employees    User[]
  images       Image[]
  customers    Customer[]
}

model Trial {
  id        String   @id @default(uuid())
  businessId String  @unique
  business  Business @relation(fields: [businessId], references: [id])
  startedAt DateTime
  endsAt DateTime
  consumedAt DateTime
}

model Subscription {
  id        String   @id @default(uuid())
  businessId String  @unique
  business  Business @relation(fields: [businessId], references: [id])
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique
  stripePriceId String?
  status String?
  currentPeriodEnd DateTime?
  trialEndsAt DateTime?
  cancelAtPeriodEnd Boolean?
  interval String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ImageKind {
  BUSINESS_LOGO
  STAMP_ON
  STAMP_OFF
}

model Image {
  id          String    @id @default(uuid())
  kind        ImageKind
  mimeType    String
  url         String
  width       Int?
  height      Int?
  createdAt   DateTime  @default(now())

  businessId  String?
  business    Business? @relation(fields: [businessId], references: [id])

  @@index([businessId, kind])
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customerLoyaltyCards CustomerLoyaltyCard[]
  businessId String
  business   Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model LoyaltyCardTemplate{
  id          String   @id @default(uuid())
  template    String
  text1       String?
  text2       String?
  maxPoints   Int      @default(10)
  cardColor   String   
  useStampImages   Boolean  @default(true)
  stampOnImageId  String?
  stampOffImageId String?
  isActive    Boolean  @default(false)
  googleWalletClassId String? @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  customerLoyaltyCards CustomerLoyaltyCard[]

  @@unique([businessId, template])
}

model CustomerLoyaltyCard {
  id      String      @id @default(uuid())
  customerId  String
  customer    Customer       @relation(fields: [customerId], references: [id])
  loyaltyCardTemplateId String
  template LoyaltyCardTemplate @relation(fields: [loyaltyCardTemplateId], references: [id])
  googleWalletObjectId String? @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customerLoyaltyCardCycles CustomerLoyaltyCardCycle[]

  @@unique([customerId, loyaltyCardTemplateId])
}

model CustomerLoyaltyCardCycle {
  id      String      @id @default(uuid())
  stampCount  Int      @default(0)
  cycleNumber Int
  customerLoyaltyCardId String
  customerLoyaltyCard   CustomerLoyaltyCard @relation(fields: [customerLoyaltyCardId], references: [id])
  startedAt DateTime @default(now())
  completedAt   DateTime?
  stampingLogs StampingLog[]

  @@unique([customerLoyaltyCardId, cycleNumber])
  

}

model StampingLog {
  id            String      @id @default(uuid())
  customerLoyaltyCardCycleId String
  customerLoyaltyCardCycle   CustomerLoyaltyCardCycle @relation(fields: [customerLoyaltyCardCycleId], references: [id])
  stampedById   String
  stampedBy     User  @relation(fields: [stampedById], references: [id])
  stampedAt     DateTime    @default(now())
  addedStamps   Int         @default(1)
  stampCountAfter Int       @default(0)
  cardCompleted Boolean     @default(false)
}
