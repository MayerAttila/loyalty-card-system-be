generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
    OWNER
    ADMIN
    STAFF
  }

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  role      UserRole @default(STAFF)
  businessId String
  business  Business @relation(fields: [businessId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts      Account[]
  sessions      Session[]
  stampingLogs StampingLog[]
  passwordResetTokens PasswordResetToken[]
  notificationsCreated Notification[]
}


model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}
 


model Business {
  id          String      @id @default(uuid())
  name        String    
  address     String?   
  website     String?
  locationPlaceId String?
  locationAddress String?
  locationLat Float?
  locationLng Float?
  subscription Subscription?
  trial Trial?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  loyaltyCardTemplates LoyaltyCardTemplate[]
  employees    User[]
  images       Image[]
  customers    Customer[]
  notifications Notification[]
  notificationLogs NotificationLog[]
}

model Trial {
  id        String   @id @default(uuid())
  businessId String  @unique
  business  Business @relation(fields: [businessId], references: [id])
  startedAt DateTime
  endsAt DateTime
  consumedAt DateTime
}

model Subscription {
  id        String   @id @default(uuid())
  businessId String  @unique
  business  Business @relation(fields: [businessId], references: [id])
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique
  stripePriceId String?
  status String?
  currentPeriodEnd DateTime?
  trialEndsAt DateTime?
  cancelAtPeriodEnd Boolean?
  interval String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ImageKind {
  BUSINESS_LOGO
  STAMP_ON
  STAMP_OFF
}

enum NotificationStatus {
  ACTIVE
  INACTIVE
}

enum NotificationDeliveryMode {
  NOW
  SCHEDULED
}

enum NotificationScheduleType {
  ONCE
  REPEAT
}

enum NotificationRepeatPattern {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum NotificationWeekday {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

enum NotificationTriggerType {
  MANUAL_NOW
  SCHEDULED
}

enum NotificationChannel {
  APPLE_WALLET
  GOOGLE_WALLET
}

enum NotificationLogStatus {
  QUEUED
  SENT
  FAILED
  SKIPPED
}

model Image {
  id          String    @id @default(uuid())
  kind        ImageKind
  mimeType    String
  url         String
  width       Int?
  height      Int?
  createdAt   DateTime  @default(now())

  businessId  String?
  business    Business? @relation(fields: [businessId], references: [id])

  @@index([businessId, kind])
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customerLoyaltyCards CustomerLoyaltyCard[]
  businessId String
  business   Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model LoyaltyCardTemplate{
  id          String   @id @default(uuid())
  template    String
  text1       String?
  text2       String?
  maxPoints   Int      @default(10)
  cardColor   String   
  useStampImages   Boolean  @default(true)
  stampOnImageId  String?
  stampOffImageId String?
  isActive    Boolean  @default(false)
  googleWalletClassId String? @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  customerLoyaltyCards CustomerLoyaltyCard[]

  @@unique([businessId, template])
}

model CustomerLoyaltyCard {
  id      String      @id @default(uuid())
  customerId  String
  customer    Customer       @relation(fields: [customerId], references: [id])
  loyaltyCardTemplateId String
  template LoyaltyCardTemplate @relation(fields: [loyaltyCardTemplateId], references: [id])
  googleWalletObjectId String? @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customerLoyaltyCardCycles CustomerLoyaltyCardCycle[]
  appleWalletRegistrations AppleWalletRegistration[]
  appleWalletSerialUpdates AppleWalletSerialUpdate[]
  notificationLogs NotificationLog[]

  @@unique([customerId, loyaltyCardTemplateId])
}

model Notification {
  id              String                 @id @default(uuid())
  businessId      String
  business        Business               @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdById     String
  createdBy       User                   @relation(fields: [createdById], references: [id], onDelete: Cascade)
  message         String
  status          NotificationStatus     @default(ACTIVE)
  deliveryMode    NotificationDeliveryMode
  scheduleType    NotificationScheduleType @default(ONCE)
  scheduledAtUtc  DateTime?
  repeatDays      NotificationWeekday[]
  repeatPattern   NotificationRepeatPattern?
  monthlyDayOfMonth Int?
  repeatTimeLocal String?
  timezone        String                 @default("UTC")
  nextRunAtUtc    DateTime?
  lastRunAtUtc    DateTime?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  logs            NotificationLog[]

  @@index([businessId, status, nextRunAtUtc])
  @@index([businessId, createdAt])
  @@index([createdById, createdAt])
}

model NotificationLog {
  id                  String               @id @default(uuid())
  notificationId      String
  notification        Notification         @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  businessId          String
  business            Business             @relation(fields: [businessId], references: [id], onDelete: Cascade)
  customerLoyaltyCardId String
  customerLoyaltyCard CustomerLoyaltyCard  @relation(fields: [customerLoyaltyCardId], references: [id], onDelete: Cascade)
  executionId         String
  triggerType         NotificationTriggerType
  channel             NotificationChannel
  status              NotificationLogStatus @default(QUEUED)
  scheduledForUtc     DateTime?
  attemptedAt         DateTime?
  providerMessageId   String?
  errorCode           String?
  errorMessage        String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  @@unique([executionId, customerLoyaltyCardId, channel])
  @@index([notificationId, createdAt])
  @@index([executionId, createdAt])
  @@index([businessId, status, createdAt])
  @@index([customerLoyaltyCardId, createdAt])
}

model CustomerLoyaltyCardCycle {
  id      String      @id @default(uuid())
  stampCount  Int      @default(0)
  cycleNumber Int
  customerLoyaltyCardId String
  customerLoyaltyCard   CustomerLoyaltyCard @relation(fields: [customerLoyaltyCardId], references: [id])
  startedAt DateTime @default(now())
  completedAt   DateTime?
  stampingLogs StampingLog[]

  @@unique([customerLoyaltyCardId, cycleNumber])
  

}

model AppleWalletRegistration {
  deviceLibraryIdentifier String
  passTypeIdentifier      String
  serialNumber            String
  cardId                  String
  card                    CustomerLoyaltyCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  pushToken               String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@id([deviceLibraryIdentifier, passTypeIdentifier, serialNumber])
  @@index([passTypeIdentifier, serialNumber])
  @@index([cardId])
}

model AppleWalletSerialUpdate {
  passTypeIdentifier String
  serialNumber       String
  cardId             String
  card               CustomerLoyaltyCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@id([passTypeIdentifier, serialNumber])
  @@index([serialNumber])
  @@index([cardId])
}

model StampingLog {
  id            String      @id @default(uuid())
  customerLoyaltyCardCycleId String
  customerLoyaltyCardCycle   CustomerLoyaltyCardCycle @relation(fields: [customerLoyaltyCardCycleId], references: [id])
  stampedById   String
  stampedBy     User  @relation(fields: [stampedById], references: [id])
  stampedAt     DateTime    @default(now())
  addedStamps   Int         @default(1)
  stampCountAfter Int       @default(0)
  cardCompleted Boolean     @default(false)
}
