generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
    OWNER
    ADMIN
    STAFF
  }

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  role      UserRole @default(STAFF)
  approved  Boolean  @default(false)
  businessId String
  business  Business @relation(fields: [businessId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts      Account[]
  sessions      Session[]
  stampingLogs StampingLog[]
}


model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 


model Business {
  id          String      @id @default(uuid())
  name        String    
  address     String?   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  loyaltyCardTemplates LoyaltyCardTemplate[]
  employees    User[]
}


model Costumer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  costumerLoyaltyCard CostumerLoyaltyCard[]
}

model LoyaltyCardTemplate{
  id          String   @id @default(uuid())
  title       String
  maxPoints   Int      @default(10)
  cardColor   String   
  accentColor String   
  textColor   String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  costumerLoyaltyCard CostumerLoyaltyCard[]

  @@unique([businessId, title])
}

model CostumerLoyaltyCard {
  id      String      @id @default(uuid())
  costumerId  String
  costumer    Costumer       @relation(fields: [costumerId], references: [id])
  loyaltyCardTemplateId String
  template LoyaltyCardTemplate @relation(fields: [loyaltyCardTemplateId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  CostumerLoyaltyCardCycle CostumerLoyaltyCardCycle[]

  @@unique([costumerId, loyaltyCardTemplateId])
}

model CostumerLoyaltyCardCycle {
  id      String      @id @default(uuid())
  stampCount  Int      @default(0)
  cycleNumber Int
  costumerLoyaltyCardId String
  costumerLoyaltyCard   CostumerLoyaltyCard @relation(fields: [costumerLoyaltyCardId], references: [id])
  startedAt DateTime @default(now())
  completedAt   DateTime?
  stampingLogs StampingLog[]

  @@unique([costumerLoyaltyCardId, cycleNumber])
  

}

model StampingLog {
  id            String      @id @default(uuid())
  costumerLoyaltyCardCycleId String
  costumerLoyaltyCardCycle   CostumerLoyaltyCardCycle @relation(fields: [costumerLoyaltyCardCycleId], references: [id])
  stampedById   String
  stampedBy     User  @relation(fields: [stampedById], references: [id])
  stampedAt     DateTime    @default(now())
}
